@model CsvDataManager.Models.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h1>Delete Person</h1>

<div class="container mt-4">
    <h4>Are you sure you want to delete this person?</h4>
    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        <dt class="col-sm-3">Surname</dt>
        <dd class="col-sm-9">@Model.Surname</dd>
        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Age</dd>
        <dt class="col-sm-3">Sex</dt>
        <dd class="col-sm-9">@Model.Sex</dd>
        <dt class="col-sm-3">Mobile</dt>
        <dd class="col-sm-9">@Model.Mobile</dd>
        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">@Model.Active</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Identity" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
